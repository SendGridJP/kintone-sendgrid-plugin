{
    "manifest_version": 1,
    "version": 11,
    "type": "APP",
    "name": {
        "ja": "SendGrid プラグイン",
        "en": "SendGrid Plug-in",
        "zh": "SendGrid Plug-in"
    },
    "description": {
        "ja": "kintoneからSendGrid経由でメールを送信するプラグインです。",
        "en": "This plug-in enables kintone to send emails through SendGrid.",
        "zh": "This plug-in enables kintone to send emails through SendGrid."
    },
    "icon": "image/logo.png",
    "homepage_url": {
        "ja": "https://sendgrid.com/",
        "en": "https://sendgrid.com/",
        "zh": "https://sendgrid.com/"
    },
    "desktop": {
        "js": [
            "https://js.kintone.com/jquery/1.11.1/jquery.min.js",
            "https://cdn.jsdelivr.net/npm/sweetalert2@9.6.0/dist/sweetalert2.min.js",
            "js/desktop.js"
        ],
        "css": [
            "css/51-modern-default.css",
            "https://cdn.jsdelivr.net/npm/sweetalert2@9.6.0/dist/sweetalert2.min.css",
            "css/sendgrid-design.css",
            "https://fonts.googleapis.com/icon?family=Material+Icons"
        ]
    },
    "config": {
        "html": "html/config.html",
        "js": [
            "https://js.kintone.com/jquery/1.11.1/jquery.min.js",
            "https://cdn.jsdelivr.net/npm/sweetalert2@9.6.0/dist/sweetalert2.min.js",
            "js/config.js"
        ],
        "css": [
            "css/51-modern-default.css",
            "https://cdn.jsdelivr.net/npm/sweetalert2@9.6.0/dist/sweetalert2.min.css",
            "https://fonts.googleapis.com/icon?family=Material+Icons",
            "css/sendgrid-design.css"

        ],
        "required_params": [
            "templateGeneration",
            "templateName",
            "templateId",
            "emailFieldCode",
            "from"
        ]
    }
}
